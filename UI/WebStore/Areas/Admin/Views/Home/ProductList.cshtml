@model IEnumerable<Product>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Секция</th>
                <th>Бренд</th>
                <th>Наименование товара</th>
                <th>Изображение</th>
                <th>Цена</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var product in Model)
        {
            <tr>
                <td><a asp-area="Admin" asp-controller="Home" asp-action="Edit" asp-route-id=@product.Id title="Изменить">
    <i class="glyphicon glyphicon-edit"></i></a></td>
                <td>@product.Id</td>
                <td>@product.Section</td>
                <td>@product.Brand</td>
                <td>@product.Name</td>
                <td><img src="~/images/shop/@product.ImageUrl" /></td>
                <td>@product.Price</td>
                <td><a asp-area="Admin" asp-controller="Home" asp-action="RemoveAt" asp-route-id=@product.Id title="Удалить">
    <i class="glyphicon glyphicon-remove text-danger"></i></a></td>
            </tr>
        }
    </table>
</div>