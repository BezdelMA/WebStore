@using WebStore.Domain.Entities

<div class="shop-menu pull-right">
    <ul class="nav navbar-nav">
        <li><a href="#"><i class="fa fa-star"></i> Wishlist</a></li>
        <li><a asp-controller="Cart" asp-action="Details"><i class="fa fa-shopping-cart"></i> Cart</a></li>
        @{
            if (User.Identity.Name.Equals("Admin"))
            {
                <li><a asp-controller="Admin" asp-action="Index"><i class="fa fa-user"></i> @User.Identity.Name</a></li>
            }
            else
            {
                <li><a asp-controller="Profile" asp-action="Index"><i class="fa fa-user"></i> @User.Identity.Name</a></li>
            }
        }
        <li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-lock"></i> Exit</a></li>
    </ul>
</div>