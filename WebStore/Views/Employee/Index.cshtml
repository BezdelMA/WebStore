@model IEnumerable<Employee>

    <div class="container">
        <a asp-action="Edit" class="btn btn-success">Добавить</a>
        <hr />

        <table class="table">
            @foreach (var item in Model)
            {
                <tr>
                    <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></td>
                    <td>@item.Surname</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    @if (User.IsInRole(WebStore.Domain.Entities.Role.Administrator))
                    {
                    <td><a asp-action="Employee" asp-route-id=@item.Id>Подробнее</a></td>
                    <td><a asp-action="DeleteByID" asp-route-id=@item.Id>Удалить</a></td>
                    }
                </tr>
            }
        </table>
    </div>
